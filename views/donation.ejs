<!-- views/donationForm.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cloth Donation Form</title>
    <link rel="stylesheet" href="donation.css">
</head>
<body>
    
        <%- include('navbar') %>
   

        <main>
            <div class="container">
                <h1>Cloth Donation Form</h1>
                <form method="post">
                    <div class="form-group">
                        <label for="donorName">Your Name:</label>
                        <input type="text" id="donorName" name="donorName" required>
                    </div>
                    <div class="form-group">
                        <label for="clothesType">Type of Clothes:</label>
                        <select id="clothesType" name="clothesType" required>
                            <option value="">Select Type</option>
                            <option value="mens">Men's</option>
                            <option value="womens">Women's</option>
                            <option value="kids">Kid's</option>
                            <option value="toys">Toys</option>
                            <option value="footware">Footware</option>

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="donatedItems">Description of Item:</label>
                        <textarea id="donatedItems" name="donatedItems" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit">Donate Now</button>
                    </div>
                </form>
            </div>
        </main>

    <footer>
        <%- include('footer') %>
    </footer>
</body>
</html>
